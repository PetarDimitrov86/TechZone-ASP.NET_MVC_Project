@model TechZone.Models.ViewModels.Moderator.SubmitReportViewModel
@{
    ViewBag.Title = "SubmitReport";
}
<div class="text-center" style="padding:50px 0">
@using (Html.BeginForm(Html.BeginForm("SubmitReport", "Maintain", FormMethod.Post, new { @class = "text-left form-horizontal", role = "form", area = "Moderator" })))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Report title..." })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-6">
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "5", placeholder = "Report description..." }) 
        </div>
    </div>
    @Html.HiddenFor(m => m.ReportedCommentId)
    @Html.HiddenFor(m => m.SnitchId)
    @Html.ValidationSummary("", new { @class = "text-danger" })
}
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}