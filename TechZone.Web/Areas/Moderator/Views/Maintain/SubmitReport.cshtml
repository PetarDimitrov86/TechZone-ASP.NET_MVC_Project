@model TechZone.Models.ViewModels.Moderator.SubmitReportViewModel
@{
    ViewBag.Title = "SubmitReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center" style="padding: 50px 0">
    @using (Html.BeginForm(Html.BeginForm("SubmitReport", "Maintain", FormMethod.Post, new {@class = "text-left form-horizontal", role = "form", area = "Moderator"})))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m => m.Title, new {@class = "col-xs-2 control-label"})
            <div class="col-xs-4">
                @Html.TextBoxFor(m => m.Title, new {@class = "form-control", placeholder = "Report title..."})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Description, new {@class = "col-xs-2 control-label"})
            <div class="col-xs-5">
                @Html.TextAreaFor(m => m.Description, new {@class = "form-control", rows = "5", placeholder = "Report description..."})
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-success col-sm-offset-3" value="Send Report"/>
            @Html.ActionLink("Back", "All", "Products", null, new {@class = "btn btn-danger"})
        </div>
        @Html.HiddenFor(m => m.ReportedCommentId)
        @Html.HiddenFor(m => m.ReviewId)
        @Html.ValidationSummary("", new {@class = "text-danger"})
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}