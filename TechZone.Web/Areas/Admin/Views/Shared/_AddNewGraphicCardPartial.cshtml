@using TechZone.Models.Enums
@model TechZone.Models.BindingModels.AddGraphicCardBindingModel
<div class="form-group">
    @Html.LabelFor(m => m.Brand, new { @class = "col-md-2 control-label" })
    <div class="col-md-2">
        @Html.DropDownListFor(m => m.Brand, Enum.GetNames(typeof(GraphicCardManufacturerType)).Select(e => new SelectListItem {Text = e}), new {@class = "form-control"})
    </div>
    @Html.LabelFor(m => m.Manufacturer, new { @class = "col-md-1 control-label" })
    <div class="col-md-2">
        @Html.DropDownListFor(m => m.Manufacturer, Enum.GetNames(typeof(ManufacturerType)).Select(e => new SelectListItem { Text = e }), new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.MemoryType, new { @class = "col-md-2 control-label" })
    <div class="col-md-2">
        @Html.DropDownListFor(m => m.MemoryType, Enum.GetNames(typeof(GraphicCardMemoryType)).Select(e => new SelectListItem {Text = e}), new {@class = "form-control"})
    </div>
    @Html.LabelFor(m => m.Memory, new { @class = "col-md-1 control-label" })
    <div class="col-md-2">
        @Html.TextBoxFor(m => m.Memory, new { @class = "form-control", type = "number", min = "1", max = "16", Value = "1" })
    </div>
</div>