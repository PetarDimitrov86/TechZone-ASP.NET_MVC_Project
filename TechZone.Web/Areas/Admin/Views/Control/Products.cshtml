@model IEnumerable<TechZone.Models.ViewModels.Admin.ManageProductViewModel>
@{
    ViewBag.Title = "Products";
}
<style>
    table, td, th {
        text-align: center;
        margin-bottom: 15px;
    }
</style>

<div style="text-align: center"><h2>Products</h2></div>
<table class="table table-striped">
    <tr>
        <th>@Html.DisplayNameFor(vm => vm.Id)</th>
        <th>@Html.DisplayNameFor(vm => vm.Name)</th>
        <th>@Html.DisplayNameFor(vm => vm.Quantity)</th>
        <th>@Html.DisplayNameFor(vm => vm.Price)</th>
        <th>Manage</th>
    </tr>
    @{
        foreach (var product in Model)
        {
            <tr>
                <td>@Html.DisplayFor(vm => product.Id)</td>
                <td>@Html.DisplayFor(vm => product.Name)</td>
                <td>@Html.DisplayFor(vm => product.Quantity)</td>
                <td>$@Html.DisplayFor(vm => product.Price)</td>
                <td>
                    @Html.ActionLink("Edit", "EditProduct", "Control", new { area = "Admin", id = @product.Id}, new { @class = "btn btn-warning btn-xs"})
                    @using (Html.BeginForm("DeleteProduct", "Control", new { area="Admin"}, FormMethod.Post, new { style = "display:inline" }))
                    {
                        @Html.HiddenFor(vm => product.Id)
                        <input type="submit" value="Delete" class="btn btn-danger btn-xs"/>
                    }
                </td>
            </tr>
        }
    }
</table>