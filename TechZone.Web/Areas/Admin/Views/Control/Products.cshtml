@model IEnumerable<TechZone.Models.ViewModels.Admin.ManageProductViewModel>
@{
    ViewBag.Title = "Products";
}
<style>
    table, td, th {
        text-align: center;
        margin-bottom: 15px;
    }
</style>

<div style="text-align: center"><h2>Products</h2></div>
<table class="table table-striped">
    <tr>
        <th>@Html.DisplayNameFor(vm => vm.Id)</th>
        <th>@Html.DisplayNameFor(vm => vm.Name)</th>
        <th>@Html.DisplayNameFor(vm => vm.Quantity)</th>
        <th>@Html.DisplayNameFor(vm => vm.Price)</th>
        <th>Manage</th>
    </tr>
    @Html.DisplayFor(vm => Model, "ManagableByAdminProducts")
</table>