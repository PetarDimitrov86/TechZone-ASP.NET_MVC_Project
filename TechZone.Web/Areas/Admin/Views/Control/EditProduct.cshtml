@model TechZone.Models.ViewModels.Admin.EditProductViewModel
@{
    ViewBag.Title = "EditProduct";
}

<h2>Edit Product</h2>

@using (Html.BeginForm("EditProduct", "Control", FormMethod.Post, new { @class = "form-horizontal", role = "form", style="max-width: 700px;" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.EditorFor(vm => Model, "EditProduct")
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Edit" class="btn btn-success"/>
            @Html.ActionLink("Cancel", "Products", "Control", new { area = "Admin"}, new { @class = "btn btn-danger"})
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}