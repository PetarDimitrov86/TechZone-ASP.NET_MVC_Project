@model TechZone.Models.ViewModels.Admin.EditProductViewModel
@{
    ViewBag.Title = "EditProduct";
}

<h2>Edit Product</h2>

@using (Html.BeginForm("EditProduct", "Control", FormMethod.Post, new { @class = "form-horizontal", role = "form", style="max-width: 700px;" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Price, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-2">
            @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control"} })
        </div>
        @Html.LabelFor(m => m.Quantity, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-2">
            @Html.EditorFor(m => m.Quantity, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.LabelFor(m => m.Discount, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-2">
            @Html.EditorFor(m => m.Discount, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ImageUrl, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.EditorFor(m => m.ImageUrl, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", value = $"{Model.Description}", rows = "15" })
        </div>
    </div>
    @Html.HiddenFor(vm => vm.Id);
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Edit" class="btn btn-success" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}