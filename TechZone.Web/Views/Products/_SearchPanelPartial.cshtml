<div class="row">
    @using (Html.BeginForm("FilterProducts", "Products", FormMethod.Get, new { @class = "text-left", role = "form"}))
    {
        <div class="form-group">
            <label>Name</label>
            <input type="text" name="productName"/>
            <label>Discount</label>
            <input type="number" name="discount"/>
            <p>
                <label for="amount">Price range:</label>
                <input type="text" id="amount" name="priceRange" readonly style="border: 0; color: #f6931f; font-weight: bold;">
            </p>
            <div id="slider-range" style="max-width: 400px; "></div>
        </div>
        <input type="submit" value="Search"/>
    }
</div>