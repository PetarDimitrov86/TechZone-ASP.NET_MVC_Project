@model TechZone.Models.ViewModels.Reviews.ReviewCommentViewModel

<li class="media media-replied">
    <div class="col-xs-8 col-sm-8 col-md-8 col-lg-10 col-xs-offset-4 col-sm-offset-4 col-md-offset-4 col-lg-offset-2">
        <div class="media-body">
            <div class="well well-lg">
                <h4 class="media-heading reviews"><span class="glyphicon glyphicon-share-alt"></span> @Model.Commentor</h4>
                <ul class="media-date reviews list-inline">
                    <li>@Model.PublishDateString</li>
                </ul>
                <div class="pull-right">
                    @Html.ActionLink("Report", "SubmitReport", "Maintain", new { area = "Moderator", id = Model.Id }, new { @class = "btn btn-danger" })
                </div>
                <p class="media-comment" id="comment-@Model.Id">@Model.Content</p>
            </div>
        </div>
    </div>
</li>
