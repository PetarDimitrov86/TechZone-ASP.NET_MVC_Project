@model TechZone.Models.BindingModels.AddCommentBindingModel

@using (Html.BeginForm("Comment", "Reviews", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(vm => vm.Id)
    <div class="form-group">
        @Html.LabelFor(vm => vm.Comment, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextAreaFor(vm => vm.Comment, new { @class = "form-control", value = $"{Model.Comment}", rows = "5" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button class="btn btn-success btn-circle" type="submit"><span class="glyphicon glyphicon-send"></span>Submit Comment</button>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            @Html.ValidationSummary("", new { @class = "text-danger" })
        </div>
    </div>
}